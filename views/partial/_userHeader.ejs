                        <a class="nav-link" href="#">Cart</a>
                     </li>
                     <li>
                        <a class="nav-link" href="#">Orders</a>
                     </li>
                     <% } %>
                </ul>
                
            </div>
            <div>
                    <% if(user){%>
                        <h6><%= user.name %></h6>  
                        <h6><a href="/user/logout" class="nav-link"> Logout</a></h6>
                    <%} else { %>
                        <h6><a href="/user/login" class="nav-link">Login</a></h6>
                    <% } %>
            </div>
        </nav>
     </header>
