	 <script>
		$(document).ready(function() {
    // Get references to the main image and thumbnails
    var mainImage = $("#mainImage");
    var thumbnails = $(".thumbnail");

    // Add a click event handler to each thumbnail
    thumbnails.click(function() {
        // Get the source (src) of the clicked thumbnail
        var thumbnailSrc = $(this).attr("src");

        // Set the main image's src to the clicked thumbnail's src
        mainImage.attr("src", thumbnailSrc);
    });
});
	 </script>