<!-- Section: Design Block -->
<body onload="loadEmail()">
<section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                <form action="/user/reset-password" method="post">
                  <div class="mb-md-5 mt-md-4 pb-5">
                    <h2 class="fw-bold mb-2 text-uppercase">Forgot Password</h2>
                    <p class="text-white-50 mb-5">Please check your registered email and enter the OTP!</p>
      
                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="typeEmail">Registered Email</label>
                      <input type="email" id="typeEmail" class="form-control form-control-lg" name="email" value="" readonly/>
                    </div>
                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="typeOTP">OTP</label>
                      <input type="text" id="typeOTP" class="form-control form-control-lg" name="otp"/>
                    </div>
                    <p class="small mb-5 pb-lg-2">
                      <a class="text-white-50" href="/user/login">Back to Login </a>|
                      <a class="text-white-50" id="resend" onclick="">Resend OTP</a></p>
                    <input type="submit" id="user-login" class="btn btn-outline-light btn-lg px-5" name="user-login" type="submit" value="Confirm"/>
                  </div>
                </form>
                </div>
              </div>
            </div>
          </div>
        </div>
 
</section>

  <!-- Section: Design Block -->
  <!--/Main Section-->
    
