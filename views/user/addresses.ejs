 <!--include Header-->
 <%- include('../partial/_userHeader')%>
 <!--include /Header--> 
 <style>
.section-border{
    margin: 2px auto;
    padding: 8%;
    }
.address-card {
    border: 1px solid #ccc;
    margin-left:20px;
    margin-right: 15px;
    padding: 50px;
    display: inline-block;
    width: 40%; 
    box-sizing: border-box;
    color:#424040;
}
.address-card:first-child {
    margin-left: 30;
}
.address-card:last-child {
    margin-right: 0;
}
.address-card p {
    color:#424040;
}
</style>

     <div class="container mt-5">
        <div class="section-border">
        <h1 class="mb-4 mt-3">Your Addresses</h1>
        <% addresses.forEach((address, index) => { %>
            <div class="address-card">
                <h4><%= address.addresses.name %></h4>
                <p><strong>Address:</strong> <%= address.addresses.address %></p>
                <p><strong>Locality:</strong> <%= address.addresses.locality %></p>
                <p><strong>City:</strong> <%= address.addresses.city %></p>
                <p><strong>Pincode:</strong> <%= address.addresses.pincode %></p>
                <p><strong>State:</strong> <%= address.addresses.state %></p>
                <p><strong>Phone Number:</strong> <%= address.addresses.mobileNumber %>
                    <span><a onclick="editAddress()"><i class="fas fa-user-edit"></i></a></span>
                </p>
                
            </div>
        <% }) %>
        </div>
    </div>
    
<!--include Footer-->
<%- include('../partial/_userFooter')%>
<!--include /Footer-->
