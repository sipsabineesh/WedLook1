<!--include Header-->
<%- include('../partial/_adminHeader')%>
<!--include /Header-->
<!--Main Section-->
<main id="site-main">
    <div class="container">
      <div class="col-md-12">
        <div class="box-nav d-flex-justify-between">
          <div class="filter">
                <a href="/admin/view-banner"><i class=" fas fa-angle-double-left"></i>All Banners</a>
          </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">New Banner</h2>
            <span class="text-light">Create a new banner using the form below</span>
        </div>
        <!--Form Handling-->
        <form action="/admin/add-banner" method="POST"  class="banner-form" enctype="multipart/form-data">
            <div class="form-group row  mt-3">
              <label for="bannerTitle" class="col-sm-2 col-form-label">Title</label>
              <div class="col-md-4">
                <input type="text"  class="form-control" id="bannerTitle" name="bannerTitle">
              </div>
           
              <label for="bannerLink" class="col-sm-2 col-form-label">Link</label>
              <div class="col-md-4">
                <input type="link"  class="form-control" id="bannerLink" name="bannerLink">
              </div>
            </div>
            <div class="form-group row  mt-3">
                <label for="bannerImage" class="col-sm-2 col-form-label">Image</label>
                <div class="col-md-4">
                  <input type="file"  class="form-control" id="bannerImage" name="image">
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-sm-10 ml-5">
                  <input type="submit" class="btns saveBtn" value="Save">
                </div>
              </div>
          </form>
        <!--/Form Handling-->
      </div>
        
    </div>

</main>
<!--/Main Section-->
<!--include Footer-->
<%- include('../partial/_adminFooter')%>
<!--include /Footer-->